<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="3dp"
    android:background="#908D8E"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:layout_alignParentTop="true"
            android:text="A campaign"
            android:textSize="21sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_detail"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="A date to date"
            android:layout_below="@+id/item_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pending_status"
            android:textSize="16dp"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="Pending"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pending_items"
            android:text="null"
            android:textSize="20dp"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ongoing_status"
            android:text="Ongoing"
            android:textSize="16dp"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_toEndOf="@+id/Pending_status"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ongoing_items"
            android:textSize="20dp"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:text="null"
            android:layout_toEndOf="@+id/Pending_items"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Total_status"
            android:text="Total"
            android:textSize="16dp"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="38dp"
            android:layout_toEndOf="@+id/Ongoing_status"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Total_items"
            android:textSize="20dp"
            android:text="null"
            android:textColor="#625F60"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/Ongoing_items"
            android:layout_toRightOf="@+id/item_image"
            android:layout_below="@+id/item_detail"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>